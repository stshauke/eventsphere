{% extends 'base.html.twig' %}

{% block title %}Modification d'Inscription{% endblock %}

{% block body %}
<section id="hero" class="hero section dark-background">
    <div class="container">
        <h3 class="text-center mt-5 mb-1">Modification des informations de l'inscription numéro: 
        <span class="text-success">{{ inscription.id }}</span></h3>
        
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <h3 class="text-primary">Modifier l'inscription</h3>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="col-md-3 mb-3 label-column">
                                {{ form_label(field) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {% if field.vars.block_prefixes[1] == 'text' %}
                                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {% else %}
                                    {{ form_widget(field) }}
                                {% endif %}
                                <span class="text-danger">{{ form_errors(field) }}</span>
                            </div>
                            <div class="col-md-3 mb-3"></div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="card-footer">
                <div class="text-center">
                    <a href="{{ path('app_inscription_index') }}" class="btn btn-outline-secondary me-2">Retour à la liste</a>
                    <button class="btn btn-outline-success me-2">
                        {{ button_label|default('Mettre à jour') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
{{ form_end(form) }}
{% endblock %}
