{% include "_partials/_header.html.twig" %}



{% block body %}
<section class="vh-100 d-flex justify-content-center align-items-center" style="background-color: #f4f5f7; position: relative;">
    <!-- Logo in the top left corner -->
    <div style="position: absolute; top: 20px; left: 20px;">
        <a href="/">
            <img src="{{ asset('assets_template/img/logo1.png') }}" alt="Logo" style="height: 120px;">
        </a>
    </div>

    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <!-- Form on the right with logo above -->
            <div class="col-lg-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h3 class="mb-4 text-center" style="font-family: var(--heading-font); color: var(--heading-color); font-weight: bold;">
                            Veuillez vous connecter
                        </h3>

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ 'Vos identifiants sont incorrects.'|trans }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <label for="inputEmail">E-mail</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label for="inputPassword">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <a href="{{ path('app_register') }}">Vous n'avez pas de compte ? Inscrivez-vous</a>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col d-flex justify-content-start">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked/>
                                        <label class="form-check-label" for="form2Example31">
                                            Se rappeler de moi
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Se connecter
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
