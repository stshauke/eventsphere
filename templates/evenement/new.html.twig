{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Créer un nouvel événement</h1>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
    
    <div class="form-group mb-3">
        <label for="nomEvenement">Nom de l'événement</label>
        {{ form_widget(form.nomEvenement, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nomEvenement) }}
    </div>

    <div class="form-group mb-3">
        <label for="descriptionEvenement">Description</label>
        {{ form_widget(form.descriptionEvenement, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.descriptionEvenement) }}
    </div>

    <div class="form-group mb-3">
        <label for="dateEvenement">Date de l'événement</label>
        {{ form_widget(form.dateEvenement, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.dateEvenement) }}
    </div>

    <div class="form-group mb-3">
        <label for="lieuEvenement">Lieu de l'événement</label>
        {{ form_widget(form.lieuEvenement, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.lieuEvenement) }}
    </div>

    <div class="form-group mb-3">
        <label for="nbMaxParticipants">Nombre maximum de participants</label>
        {{ form_widget(form.nbMaxParticipants, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nbMaxParticipants) }}
    </div>

    <div class="form-group mb-3">
        <label for="image">Image de l'événement</label>
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.image) }}
    </div>

    <button type="submit" class="btn btn-success">Créer</button>

    {{ form_end(form) }}
</div>
{% endblock %}
